= form_with model: @offer, local: true to |form|
 %p
    = form.label :name
    %br/
    = form.text_field :name
  %p
    = form.label :email
    %br/
    = form.text_field :email
  %p
    = form.label :location
    %br/
    = form.text_area :location
      %p
    = form.label :price
    %br/
    = form.text_area :price
    %p
    = form.submit "Create offer"
